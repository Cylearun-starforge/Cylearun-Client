{
  "name": "cylearun-client",
  "description": "Official client for Command & Conquer: Cylearun",
  "author": {
    "name": "StarForge team"
  },
  "version": "0.0.0",
  "scripts": {
    "start": "electron index.js",
    "pack:dev": "electron-builder build --win"
  },
  "devDependencies": {
    "electron-builder": "^23.1.0",
    "electron": "19.0.7"
  },
  "build": {
    "appId": "starforge.cylearun",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "./renderer/**/*",
      "./preload/**/*",
      "./index.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "artifactName": "${productName}.${ext}",
      "icon": "./assets/Cylearun.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "copyright": "Copyright Â©2022 StarForge team"
  }
}
